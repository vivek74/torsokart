<div class="container card-2 mb-5" style="background-color: white;">
	<div class="card-body">
    <h5 style="padding-bottom: 0; margin: 0; color: black;">BEST DEALS</h5>
  	</div>
	<div class="row">
		<% showbestdeals.forEach(function(items){%>
			<div class="col-lg-3 col-md-3 mt-2 pr-2 col-6 animated slideInUp d-flex padding-new-page">
				<div class="card flex-fil card-1" style="width: 13rem;">
					<a style="width: 10rem; margin: 0 auto;" target="_blank" href="/category/<%= items.category %>/<%= items._id %>"><img class="card-img-top " src="<%=items.image %>" alt="Card image cap"></a>
					<div class="card-body" id="card-edit">
		                <p style="margin-bottom:0; text-align: center;"><%= items.name %></p>
		                <p class="card-text" id="c1" style="color: black; text-align: center; font-weight: bold;">
		                  â‚¹<%= items.cost %>/-
		                </p>
		            </div>
				</div>
			</div>
		<%});%>
	</div>
	<!-- pagnination of all t-shirts -->
	<nav class="pb-2" aria-label="Page navigation example" style="padding-bottom: 2em;">
	  <ul class="pagination justify-content-center mt-5">
	  	<% for(var i=1; i < 3; i++ ){%>
	  		<% if(i == current){ %>
	    		<li class="page-item active"><a class="page-link" onclick='bestDeals(<%=i%>)' href="/allproduct/<%=i%>"><%=i%><span class="sr-only"></span></a>
			    </li>
	    	<% } else { %>
	    		<li class="page-item"><a class="page-link" onclick='bestDeals(<%=i%>)'><%=i%></a></li>
	    	<%}%>
		<%}%>
		<li class="pl-3">
	    	<div class="ajax-loader-page justify-content-center">
            	<img src="/img/logo/ajax-loader-page.gif" class="img-responsive" />
        	</div>
        </li>    
	  </ul>
	</nav>
</div>
	
