<% include ./partials/header %>

	<div id="carouselExampleIndicators" class="carousel slide top" data-ride="carousel">
	  <ol class="carousel-indicators">
	    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
	    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
	    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
	    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
	    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
	  </ol>
	  <div class="carousel-inner">
	    <div class="carousel-item active">
	      <img class="d-block w-100 carouselimage" src="/assets/images/img1.jpg" alt="First slide">
	    </div>
	    <div class="carousel-item">
	      <img class="d-block w-100 carouselimage" src="/assets/images/img2.jpg" alt="Second slide">
	    </div>
	    <div class="carousel-item">
	      <img class="d-block w-100 carouselimage" src="/assets/images/img3.jpg" alt="Third slide">
	    </div>
	    <div class="carousel-item">
	      <img class="d-block w-100 carouselimage" src="/assets/images/img4.jpg" alt="Third slide">
	    </div>
	    <div class="carousel-item">
	      <img class="d-block w-100 carouselimage" src="/assets/images/img5.jpg" alt="Third slide">
	    </div>
	  </div>
	  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
	    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
	    <span class="sr-only">Previous</span>
	  </a>
	  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
	    <span class="carousel-control-next-icon" aria-hidden="true"></span>
	    <span class="sr-only">Next</span>
	  </a>
	</div>

	<div style="width: 60rem;" class="card card-2 landing-add mt-4 mobile-hide">
		<img style="height: 10rem;" src="/img/banners/landing_add.jpg">
	</div>
	<div class="card card-2 mt-4 web-view">
		<img style="height: 10rem;" src="/img/banners/landing_add.jpg">
	</div>

	<div class="container web-view mt-3 card-2" style="background-color: rgba(73,155,234,1) ">
		<div class="card-body">
			<h5 style="padding-bottom: 0; margin: 0; color: black;">DESIGN YOUR OWN T-SHIRT</h5>
		</div>
		<div class="web-view pb-5">
			<div class="row">
				<div class="col-lg-6 col-md-6 col-12 p-1" >
					<img class="card-1" style="cursor: pointer;" src="/img/banners/customDesign.jpg">
				</div>
				<div class="col-lg-6 col-md-6 col-12 p-1">
					<img class="card-1" style="cursor: pointer;" src="/img/banners/customDesign.jpg">
				</div>
			</div>
		</div>
	</div>

	
	<div class="container mobile-hide mt-3 card-2" style="background-color: rgba(73,155,234,1)">
		<div class="card-body" style="padding-bottom: 0; margin: 0;">
			<h4 style="padding-bottom: 0; margin: 0; color: white;">DESIGN YOUR OWN T-SHIRT</h4>
		</div>
		<div style="width: 60rem;" class="landing-add mt-5 mobile-hide pb-5">
			<div class="row">
				<div class="col-lg-6 col-md-6 col-6 p-2">
					<img class="card-1" style="height: 19rem; cursor: pointer; border-radius: 5px;" src="/img/banners/customDesign.jpg">
				</div>
				<div class="col-lg-6 col-md-6 col-6 p-2">
					<img class="card-1" style="height: 19rem; cursor: pointer; border-radius: 5px;" src="/img/banners/customDesign.jpg">
				</div>
			</div>
		</div>
	</div>


