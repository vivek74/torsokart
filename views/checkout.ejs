						      	</div> -->
						 </div>
				      </div>
				    </div>
				  </div>
				  <div class="card">
				    <div class="card-header" role="tab" id="headingTwo" style="background-color: #94618E;">
				      <h5 class="mb-0">
				        <a class="collapsed" data-toggle="collapse" role="button" aria-expanded="false" style="text-decoration: none;">
				          <span class="badge badge-light">2</span>&nbsp; &nbsp;<span class="mobile_checkout_view" style="color: white; text-decoration: none;">ADDRESS <i id="p1"><i class="fa fa-check"></i></i><p id="alert1" style="display: inline; font-size: 1.1rem; color: yellow;">Address Saved</p></span>
				        </a>
				      </h5>
				    </div>
				    <div id="collapseTwo" class="collapse" role="tabpanel" aria-labelledby="headingTwo" data-parent="#accordion">
				    	<div id="showAdd" class="card-body">
				    		<% include ./ajax/addAddress %>

				    		<button class="btn btn-warning btn-sm mt-5" id="link2" disabled class="collapsed" data-toggle="collapse" href="#collapseThree" role="button" aria-expanded="false" aria-controls="collapseThree" style="text-decoration: none;">Proceed <i class="fa fa-angle-double-down" aria-hidden="true"></i></button>
				    	</div>
			    	
				      	<!-- save address model -->

							<!-- Modal -->
							<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
							  <div class="modal-dialog modal-dialog-centered" role="document">
							    <div class="modal-content">
							      <div class="modal-header">
							        <h5 class="modal-title" id="exampleModalCenterTitle">Add Address</h5>
							        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
							          <span aria-hidden="true">&times;</span>
							        </button>
							      </div>
