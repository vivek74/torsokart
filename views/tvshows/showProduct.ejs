        <div id="recipeCarousel" class="showCarousel container carousel slide w-100" data-ride="carousel">
            <div class="carousel-inner showCarouselInner" role="listbox">                             
                <% allCategories.forEach(function(category){ %>
                <div class="carousel-item ">
                    <img class="showItem col-md-3 col-sm-12 img-fluid" src="<%= category.image %>">
                </div>
                <%});%>
            </div>
            <a class="carousel-control-prev icon" href="#recipeCarousel" role="button" data-slide="prev">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next icon" href="#recipeCarousel" role="button" data-slide="next">
                <i class="fa fa-chevron-right" aria-hidden="true"></i>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>


