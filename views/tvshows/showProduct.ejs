        <main class="col-md-9 col-xs-11 p-l-2 p-t-2" id='content'>
            <a href="#sidebar" style="position: absolute;" data-toggle="collapse"><i class="fas fa-bars fa-3x"></i></i></a>

            <!-- product description-->
<div class="">
    <div class="card margin_bot" style="padding: 1em 1em 1em 1em; border-radius: 0;">
      <div class="container-fliud">
        <div class="wrapper row">
          <div class="preview col-md-6" style="padding: 0px;">
            <div class="preview-pic tab-content">
              <div class="tab-pane active" id="pic-1"><img src="<%=category.image%>" /></div>
              <% if(currentUser && category.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                <button type="button" class="btn btn-success btn-sm" onclick="window.location.href='/anime/<%= category._id %>/edit'">Edit</button>
                <form action="/anime/<%= category._id %>?_method=DELETE" method="POST" class="delete-form">
                  <button class="btn btn-danger btn-sm">Delete</button>
                </form>
              <%}%>
            </div>
          </div>
          <div class="details col-md-6 mobile_view_table" style="padding-right: 0px;">
            <h5 class="product-title" style="font-family: 'Raleway', sans-serif; color: black;"><%=category.name%></h5>
            <div class="rating">
            </div>

            <table style="width:100%">
              <tr>
                <td><p class="table_show_view" style="font-weight: bold;">Price:</p></td>
                <td><p class="table_show_view"><span style="margin-left: 4em;">â‚¹<%=category.cost%></span></p></td>
              </tr>
              <tr>
                <td><p class="table_show_view" style="font-weight: bold;">Delivered:</p></td>
                <td>
                  <p class="delivery2 table_show_view"><span style="margin-left: 4em; color: red;">Only in LPU</span></p>
                  <p style="margin-left: 4em;">3-5 day delivery</p>
                </td>
              </tr>
              <tr>
                <td><p class="table_show_view" style="font-weight: bold;">Highlights:</p> </td>
                <td>
                  <p> 
                      <ul class="highlights table_show_view" style="margin-left: 2em; ">
                        <li>Fabric: <%=category.fabric%></li>
                        <li>Sleave: <%=category.sleave%></li>
                        <li>Sutable: <%=category.sutable%></li>
                        <li>Pattern: <%=category.pattern%></li>
                        <li>Pattern: <%=category.pattern%></li>
                      </ul>
                  </p>
                </td>
              </tr>
              <tr>
                <td><p class="table_show_view" style="font-weight: bold;">sizes:</p></td>
                <td>
                  <div class="mobile-size-show">
                    <input type="radio" name="size" value="<%=category.size1%>" id="<%=category.size1%>">
                    <label for="<%=category.size1%>"><%=category.size1%></label>
                  
                    <input type="radio" name="size" value="<%=category.size2%>" id="<%=category.size2%>">
                    <label for="XL"><%=category.size2%></label>
                  
                    <input type="radio" name="size" value="<%=category.size3%>" id="<%=category.size3%>">
                    <label for="XXL"><%=category.size3%></label>
                  </div>
                </td>
              </tr>
            </table>

            
              <form action="/add-to-cart/<%= category._id %>" method="get">
                <input type="text" hidden name="size" >
                <div class="action">
                  <button class="add-to-cart btn btn-default btn-sm" type="submit">add to cart</button>
                  <button onclick="window.location.href='/checkout'" class="add-to-cart buy_now btn btn-default btn-sm" type="button">Buy Now</button>
                </div>
              </form>
            <script>
            $( "input" ).on( "click", function() {
              $( "input:text" ).val( $( "input:checked" ).val());
            });
            </script>

          </div>
        </div>
      </div>
    </div>
  </div>
  </main>
  </div>
</div>

<div class="container-fliud-comment">
  <div class="card card2" style="padding: 5px">
    <p class="show_comments_topic">Description:</p>
    <p class="show_comments_disp"><%= category.description %></p>
    <hr>
    <p class="show_comments_topic">Comments:</p>
    <form action="/anime/<%= category._id %>/comments" method="POST">
      <div class="form-group">
        <input type="text" class="form-control" name="comment[text]" placeholder="write comment....">
      </div>
      <button type="submit" class="btn btn-outline-primary">Submit</button>
    </form>
    <div class="card newCard">
  <div class="card-body">
    
      <div class="row">
        <% category.comments.reverse().forEach(function(comment){ %>
        <div class="col-md-12 col-xs-12">
          <strong style="color: #2969b0;"><i class="fas fa-user-circle" style="color: #2969b0;"></i><span class="show_comments_topic"> <%= comment.author.username %></span></strong>
          <span style="color: #2969b0;" class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
          <div class="show_comments_disp">
           <%= comment.text %> 
           <% if(currentUser && comment.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
            <div class="pull-right">
              <form class="delete-form" action="/anime/<%=category._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                <button class="btn btn-secondary btn-sm">DELETE</button>
              </form>
            </div>
          <% } %>
          <hr>
        </div>
        
      </div>
      <% }) %>
    </div>
    
  </div>
</div>
  </div>
</div>

