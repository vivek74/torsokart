<% include ../partials/header %>

<% if(currentUser && currentUser.isAdmin){ %>
<div class="container top-margin">
    <div class="raw">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
          <div class="card-body">
            <h4  style="text-align: center;"><i style="color: red;" class="far fa-file-alt"></i> &nbsp LIST OF USER</h4>
          </div>
        </div>
        <div class="card mt-3">
          <div class="card-body">
            <div class="table-responsive">
              <table style="font-size: 12px;" class="table table-striped table-dark">
              <thead>
                <tr>
                  <th scope="col">Password</th>
                  <th scope="col">Full Name</th>
                  <th scope="col">Joined At</th>
                  <th scope="col">Phone No</th>
                  <th scope="col">Email</th>
                </tr>
              </thead>
              <tbody>
                <% allusers.reverse().forEach(function(allusers){ %>
                <tr>
                  <th><%=allusers.passwordCopy%></th>
                  <td style="text-transform: uppercase;"><%=allusers.firstName%></td>
                  <td><%= moment(allusers.joinedAt).format("DD-MMM-YYYY") %></td>
                  <td><%=allusers.phone%></td>
                  <td><%=allusers.email%></td>
                </tr>
                <%});%>
              </tbody>
            </table>
          </div>
          </div>
        </div>
      </div>
      
    </div>
  </div>
<%}%>

<%include ../partials/footer %>



    